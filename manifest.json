{
  "manifest_version": 2,
  "name": "LinkNotes",
  "version": "1.0",
  "description": "Save links with notes.",
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "browser_action":{
    "default_action":"Save the link",
    "default_popup":"popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "link16.png",
    "32": "link32.png",
    "48": "link48.png",
    "128": "link128.png"
  }
}
